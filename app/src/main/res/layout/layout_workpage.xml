<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.qmuiteam.qmui.widget.QMUITopBarLayout
        android:id="@+id/work_topbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fitsSystemWindows="true"/>
    <LinearLayout
        android:id="@+id/work_position"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"/>
    <com.example.facerecongnition.ui.custmerView.MyImageView
        android:id="@+id/work_picture"
        android:layout_width="match_parent"
        android:background="@color/recognizePicture"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    </com.example.facerecongnition.ui.custmerView.MyImageView>
    <LinearLayout
        android:id="@+id/work_button"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"/>
    <com.chaychan.library.BottomBarLayout
        android:id="@+id/work_bottombar"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

</LinearLayout>