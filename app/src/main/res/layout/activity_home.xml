<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_homepage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <com.chaychan.library.BottomBarLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="#ffffff"
        >

        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:iconNormal="@mipmap/icon_tabbar_home"
            app:iconSelected="@mipmap/icon_tabbar_home_select"
            app:iconHeight="35dp"
            app:iconWidth="35dp"
            app:itemText="首页"
            app:textColorNormal="@color/tab_grey"
            app:textColorSelected="@color/tab_blue"
            app:itemTextSize="12sp"
            />

        <com.chaychan.library.BottomBarItem
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            app:iconNormal="@mipmap/icon_tabbar_me"
            app:iconSelected="@mipmap/icon_tabbar_me_select"
            app:iconHeight="35dp"
            app:iconWidth="35dp"
            app:itemText="我的"
            app:textColorNormal="@color/tab_grey"
            app:textColorSelected="@color/tab_blue"
            app:itemTextSize="12sp"
            />
    </com.chaychan.library.BottomBarLayout>

</LinearLayout>